<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="back_dashboard_form_wizard_view" model="ir.ui.view">
        <field name="name">Back Dashboard Form Wizard View</field>
        <field name="model">back.dashboard</field>
        <field name="arch" type="xml">
            <form string="Parameters">
                <p>
                Are you want to Back to Dashboard ?
                </p>
                <footer>
                    <button name="back_to_dashboard_action" string="Confirm" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- <record id="action_back_dashboard" model="ir.actions.act_window">
        <field name="name">Back - Dashboard</field>
        <field name="res_model">back.dashboard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record> -->

    <record id="action_back_dashboard" model="ir.actions.server">
        <field name="name">Back - Dashboard</field>
        <!-- <field name="condition">True</field> -->
        <field name="type">ir.actions.server</field>
        <field name="model_id" ref="model_back_dashboard" />
        <!-- <field name="state">code</field> -->
        <!-- <field name="code">self.back_to_office_action(cr, uid, context.get('active_ids', []), context=context)</field> -->
        <field name="state">code</field>
        <field name="code">
            action = model.back_to_dashboard_action()
        </field>
    </record>

    <menuitem action="action_back_dashboard" 
        id="menu_back_dashboard" 
        sequence="6"
        groups="erp_hospitality.group_erp_back_to_hospitality"
        web_icon="erp_hospitality,static/description/back_office.png"/>

</odoo>